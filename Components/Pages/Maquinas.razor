@page "/maquinas"
@page "/"
@namespace IndustrialMonitor.Components.Pages
@using IndustrialMonitor.Data
@using IndustrialMonitor.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer
@implements IDisposable
@using System.Threading

<PageTitle>Monitoramento de Máquinas</PageTitle>

<h1>Monitoramento de Máquinas (Tempo Real)</h1>

<p>Acompanhe o status e o processo das injetoras plásticas.</p>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="AdicionarMaquinaTeste">Adicionar Máquina de Teste</button>
</div>

@if (maquinas == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Status</th>
                    <th>Temperatura (°C)</th>
                    <th>Pressão (bar)</th>
                    <th>Energia (kWh)</th>
                    <th>Tempo Ligada</th>
                    <th>Momento do Processo</th>
                    <th>Motivo / Timer</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var maquina in maquinas)
                {
                    <tr>
                        <td>@maquina.Id</td>
                        <td><strong>@maquina.Nome</strong></td>
                        <td>
                            <span class="badge @GetStatusClass(maquina.Status)">
                                @GetStatusLabel(maquina.Status)
                            </span>
                        </td>
                        <td>@maquina.Temperatura.ToString("F1")</td>
                        <td>@maquina.Pressao.ToString("F2")</td>
                        <td>@maquina.ConsumoEnergia.ToString("F2")</td>
                        <td>@maquina.TempoFuncionamento.ToString(@"hh\:mm\:ss")</td>
                        <td>
                            <span class="text-muted">@maquina.MomentoProcesso</span>
                        </td>
                        <td>
                            @if (contagensRegressivas.ContainsKey(maquina.Id))
                            {
                                <span class="badge bg-warning text-dark">
                                    Desligando em @contagensRegressivas[maquina.Id]s
                                </span>
                            }
                            else if (!string.IsNullOrEmpty(maquina.MotivoDesligamento) && maquina.Status != StatusMaquina.Operando)
                            {
                                <small class="text-danger">@maquina.MotivoDesligamento</small>
                            }
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                @if (maquina.Status == StatusMaquina.Operando)
                                {
                                    @if (!contagensRegressivas.ContainsKey(maquina.Id))
                                    {
                                        <div class="input-group input-group-sm" style="width: 120px;">
                                            <input type="number" class="form-control" placeholder="Seg" 
                                                   @bind="temposInput[maquina.Id]" />
                                            <button class="btn btn-outline-secondary" type="button" 
                                                    @onclick="() => IniciarTimer(maquina.Id)">
                                                Agendar
                                            </button>
                                        </div>
                                    }
                                    
                                    <button class="btn btn-sm btn-danger" @onclick='() => SolicitarDesligamento(maquina.Id, "Desligamento Manual")'>
                                        Desligar
                                    </button>
                                }
                                else if (maquina.Status == StatusMaquina.DesligamentoSolicitado || maquina.Status == StatusMaquina.EmParadaTecnica)
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                        Parando...
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Maquina>? maquinas;
    private PeriodicTimer? timer;
    private CancellationTokenSource? cts;
    private Dictionary<int, int> contagensRegressivas = new();
    private Dictionary<int, int> temposInput = new();

    protected override async Task OnInitializedAsync()
    {
        await CarregarMaquinas();
        
        // Simular atualização em tempo real
        cts = new CancellationTokenSource();
        _ = IniciarMonitoramento(cts.Token);
    }

    private async Task IniciarMonitoramento(CancellationToken ct)
    {
        timer = new PeriodicTimer(TimeSpan.FromSeconds(1));
        while (await timer.WaitForNextTickAsync(ct))
        {
            await ProcessarTimers();
            await CarregarMaquinas();
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task ProcessarTimers()
    {
        var idsParaRemover = new List<int>();
        
        foreach (var par in contagensRegressivas.ToList())
        {
            int id = par.Key;
            int tempoRestante = par.Value - 1;

            if (tempoRestante <= 0)
            {
                idsParaRemover.Add(id);
                await SolicitarDesligamento(id, "Tempo limite atingido");
            }
            else
            {
                contagensRegressivas[id] = tempoRestante;
            }
        }

        foreach (var id in idsParaRemover)
        {
            contagensRegressivas.Remove(id);
        }
    }

    private async Task CarregarMaquinas()
    {
        try
        {
            maquinas = await DbContext.Maquinas.OrderBy(m => m.Id).ToListAsync();
            
            // Inicializar inputs para novas máquinas
            if (maquinas != null)
            {
                foreach (var m in maquinas)
                {
                    if (!temposInput.ContainsKey(m.Id))
                        temposInput[m.Id] = 30; // 30 segundos padrão
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar máquinas: {ex.Message}");
            maquinas = new List<Maquina>();
        }
    }

    private async Task AdicionarMaquinaTeste()
    {
        var novaMaquina = new Maquina
        {
            Nome = $"Injetora {DateTime.Now.Ticks % 100}",
            Status = StatusMaquina.Operando,
            Temperatura = Random.Shared.Next(40, 60),
            Pressao = Random.Shared.NextDouble() * 5 + 100,
            ConsumoEnergia = 0,
            TempoFuncionamento = TimeSpan.Zero,
            MomentoProcesso = "Ciclo Inicial",
            UltimaComunicacao = DateTime.UtcNow
        };

        DbContext.Maquinas.Add(novaMaquina);
        await DbContext.SaveChangesAsync();
        await CarregarMaquinas();
    }

    private async Task SolicitarDesligamento(int id, string motivo)
    {
        var maquina = await DbContext.Maquinas.FindAsync(id);
        if (maquina != null && maquina.Status == StatusMaquina.Operando)
        {
            maquina.Status = StatusMaquina.DesligamentoSolicitado;
            maquina.MomentoProcesso = "Desligamento Remoto%";
            maquina.MotivoDesligamento = motivo;
            await DbContext.SaveChangesAsync();
            await CarregarMaquinas();
        }
    }

    private void IniciarTimer(int id)
    {
        if (temposInput.TryGetValue(id, out int segundos) && segundos > 0)
        {
            contagensRegressivas[id] = segundos;
        }
    }

    private string GetStatusClass(StatusMaquina status) => status switch
    {
        StatusMaquina.Operando => "bg-success",
        StatusMaquina.Parada => "bg-secondary",
        StatusMaquina.Manutencao => "bg-warning text-dark",
        StatusMaquina.Erro => "bg-danger",
        StatusMaquina.DesligamentoSolicitado => "bg-dark",
        StatusMaquina.EmParadaTecnica => "bg-info text-dark",
        _ => "bg-light text-dark"
    };

    private string GetStatusLabel(StatusMaquina status) => status switch
    {
        StatusMaquina.DesligamentoSolicitado => "Deslig. Solicitado",
        StatusMaquina.EmParadaTecnica => "Rotina de Parada",
        _ => status.ToString()
    };

    public void Dispose()
    {
        cts?.Cancel();
        cts?.Dispose();
        timer?.Dispose();
    }
}
